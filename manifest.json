{
  "name": "ADRewind for Youtubeâ„¢",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "This plugin skips video fragments with an advertisement placed by the author.",
  "homepage_url": "http://adrewind.net",
  "icons": {
    "16": "icons/no-ad-icon-16.png",
    "32": "icons/no-ad-icon-32.png",
    "48": "icons/no-ad-icon-48.png",
    "128": "icons/no-ad-icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/no-ad-icon-32.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "alarms",
    "storage",
    "https://*.adrewind.net/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/inject/config.js",
        "src/inject/xhr.js",
        "src/inject/adr-state.js",
        "src/inject/fragments-bar/playhead.js",
        "src/inject/fragments-bar/frame-by-frame.js",
        "src/inject/fragments-bar/fragment.js",
        "src/inject/fragments-bar/bar.js",
        "src/inject/ad-info.js",
        "src/inject/controls.js",
        "src/inject/ad-jumper.js",
        "src/inject/ad-manager.js",
        "src/inject/inject.js",
        "src/inject/guide.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/guide-hello-en.svg",
    "images/guide-hello-ru.svg",
    "images/guide-ad-menu-en.svg",
    "images/guide-ad-menu-ru.svg",
    "images/guide-playhead-en.svg",
    "images/guide-playhead-ru.svg",
    "images/guide-removal-en.svg",
    "images/guide-removal-ru.svg"
  ]
}
