{
  "name": "ADRewind for Youtubeâ„¢",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This plugin skips video fragments with an advertisement placed by an author.",
  "homepage_url": "http://adrewind.net",
  "icons": {
    "16": "icons/fullicon16.png",
    "48": "icons/fullicon48.png",
    "128": "icons/fullicon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "storage",
    "identity",
    "http://localhost:9090/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/inject/xhr.js",
        "src/inject/adr-state.js",
        "src/inject/ad-selectors.js",
        "src/inject/ad-info.js",
        "src/inject/controls.js",
        "src/inject/ad-jumper.js",
        "src/inject/ad-manager.js",
        "src/inject/inject.js",
        "src/inject/guide.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/guide-ad-menu-en.svg"
  ]
}