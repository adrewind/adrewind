{
  "name": "ADRewind for Youtubeâ„¢",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This plugin skips video fragments with an advertisement placed by an author.",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/fullicon16.png",
    "48": "icons/fullicon48.png",
    "128": "icons/fullicon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "permissions": [
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/inject/player.js",
        "src/inject/inject.js"
      ]
    }
  ]
}